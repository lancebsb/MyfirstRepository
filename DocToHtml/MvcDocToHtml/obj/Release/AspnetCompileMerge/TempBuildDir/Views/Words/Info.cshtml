@model List<MvcDocToHtml.Controllers.WordsController.model>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Info</title>
</head>
<body>
    <div>
        <table border="1" bordercolor="#a0c6e5" style="border-collapse:collapse;">
            <tr>
                <td style="width:50px">序号</td>
                <td width="220px">字段名称</td>
                <td>字段值</td>
            </tr>
            @for (var i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Html.DisplayFor(modelItem => Model[i].name) </td>
                    <td>@(new HtmlString(Model[i].val)) </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
